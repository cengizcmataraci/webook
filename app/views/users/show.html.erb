<div class="p-3 mb-2">
<div class="card" align="center">
  <div class="card-body">
<h1> User Profile </h1>
<h4>Username: <%= @user.username %></h4>
<h4>User email: <%= @user.email%></h4><br>

<h2>Favorited Books</h2>
<% if !@fav.exists? %>
<p>You don't have any favorite book.</p>
<% else %>
<table class="table table-hover">
  <thead>
    <tr align="center">
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @fav.each do |fav| %>
      <tr>
        <td align="center"><%= fav.favorited.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>



<h2>Books</h2>
<table class="table">
  <thead>
    <tr align="center">
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Page Count</th>
      <th scope="col">Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avaiblebooks.each do |book| %>
      <tr>
        <td align="center"><%= book.title %></td>
        <td align="center"><%= book.author %></td>
        <td align="center"><%= book.pagecount %></td>
        <td align="center"><%= book.status %></td>
        <td ><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>